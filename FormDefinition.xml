<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://localhost/FormDefinition.xsd">
    <properties>
        <document_properties>
            <root>
                <local_name>mods</local_name>
                <prefix>mods</prefix>
                <uri>http://www.loc.gov/mods/v3</uri>
            </root>
            <namespaces>
                <namespace prefix="mods">http://www.loc.gov/mods/v3</namespace>
            </namespaces>
            <!-- <schema name="mods">http://www.loc.gov/standards/mods/v3/mods-3-4.xsd</schema> -->
        </document_properties>
    </properties>
    <elements>
        <element key="d">
            <type>tabs</type>
            <title>Tab Title</title>
            <tree>true</tree>
            <children>
                <element key="t">
                    <type>tabpanel</type>
                    <title>Foo</title>
                    <children>
                        <element key="test">
                            <type>textfield</type>
                            <tree>false</tree>
                            <default_value type="string">testing 123</default_value>
                        </element>
                        <element key="e">
                            <type>textfield</type>
                            <default_value type="string">Default</default_value>
                            <actions>
                                <read>
                                    <path context="parent">mods:title</path>
                                </read>
                                <update>
                                    <path context="self">self::node()</path>
                                </update>
                            </actions>
                        </element>
                    </children>
                    <user_data>
                        <key>
                            <value type="string">foobar</value>
                        </key>
                    </user_data>
                    <actions>
                        <read>
                            <path context="document">/mods:mods/mods:titleInfo</path>
                        </read>
                    </actions>
                </element>
            </children>
        </element>
        <element key="w">
            <title>w</title>
            <tree>false</tree>
            <type>textfield</type>
            <default_value type="string">w</default_value>
        </element>
        <element key="p">
            <title>p</title>
            <type>fieldset</type>
            <tree>true</tree>
            <children>
                <element key="z">
                    <title>z</title>
                    <tree>false</tree>
                    <type>textfield</type>
                    <default_value type="string">w</default_value>
                </element>  
                <element key="k">
                    <title>k</title>
                    <tree>true</tree>
                    <type>textfield</type>
                    <default_value type="string">w</default_value>
                </element>  
            </children>
        </element>
        <element>
            <type>submit</type>
            <value>submit</value>
        </element>
    </elements>
</form>
