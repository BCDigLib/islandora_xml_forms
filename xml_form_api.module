function getTestDefinition() {
  $document = new DOMDocument();
  $document->load(drupal_get_path('module', 'xml_form_api') . '/tests/data/definitions/mods.xml');
  return $document->saveXML();
}

function getTestDocument() {
  $document = new DOMDocument();
  $document->load(drupal_get_path('module', 'xml_form_api') . '/tests/data/documents/mods.xml');
  return $document->saveXML();
}

